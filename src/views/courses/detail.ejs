<div class="row">
    <div class="col-md-8">
        <!-- Vulnerable a XSS: muestra el título y descripción sin escape -->
        <h1><%- course.title %></h1>
        <div class="mb-4">
            <%- course.description %>
        </div>

        <!-- Video de YouTube -->
        <div class="ratio ratio-16x9 mb-4">
            <iframe src="<%= course.video_url %>" allowfullscreen></iframe>
        </div>

        <!-- Sección de comentarios -->
        <h3>Comentarios</h3>
        <% if (comments.length > 0) { %>
            <div class="list-group mb-4">
                <% comments.forEach(comment => { %>
                    <div class="list-group-item">
                        <!-- Vulnerable a XSS: muestra el contenido sin escape -->
                        <p class="mb-1"><%- comment.content %></p>
                        <small class="text-muted">Usuario #<%= comment.user_id %></small>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-muted">No hay comentarios aún.</p>
        <% } %>

        <% if (locals.userId) { %>
            <form action="/courses/<%= course.id %>/comments" method="POST">
                <div class="mb-3">
                    <label for="comment" class="form-label">Deja tu comentario</label>
                    <textarea class="form-control" id="comment" name="comment" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Enviar Comentario</button>
            </form>
        <% } else { %>
            <div class="alert alert-info">
                <a href="/auth/login">Inicia sesión</a> para dejar un comentario.
            </div>
        <% } %>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Detalles del Curso</h5>
                <p class="card-text">
                    <strong>Duración:</strong> <%= course.duration %><br>
                    <strong>Nivel:</strong> <%= course.level %><br>
                    <strong>Categoría:</strong> <%= course.category %>
                </p>
            </div>
        </div>
    </div>
</div>